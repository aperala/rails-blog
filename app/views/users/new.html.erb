<% if @user.errors.full_messages.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>       
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div id = "new_user_pg">

  <div class="main">
    <h2 class="page_headline">Create your account</h2>
     <%= form_for @user, url: users_path, html: { multipart: true } do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username, {placeholder: 'Username', required: true} %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, {placeholder: 'Enter a password', required: true} %>
      <br>
      <%= label_tag :confirm_password %>
      <%= f.password_field :password_confirmation, {placeholder: 'Confirm your password', required: true} %>
      <br>
      <%= f.label :city %>
      <%= f.text_field :city, {placeholder: 'City', required: true} %>
      <br>
      <%= f.label :interests %>
      <%= f.text_field :interests, {placeholder: 'e.g., graphic design', required: true} %>
      <br>
      <%= f.label :occupation %>
      <%= f.text_field :occupation, {placeholder: 'Occupation', required: true} %>
      <br>
      <%= f.label :Choose_a_photo %>
      <%= f.file_field :avatar %> 
      <br>
      <%= f.submit "Sign Up", class: 'button' %>
  </div>
  <% end %>
</div> 


  