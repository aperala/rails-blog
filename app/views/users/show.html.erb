<div class = "left">
  <article class = "profile">
    <%= image_tag @user.avatar.url(:medium) %>
    <h3>
      <%= @user.username %>
    </h3>
    <p>
      <%= @user.city %>
    </p>
    <p>
      Interests:
      <%= @user.interests %>
    </p>
     <p>
      Occupation:
      <%= @user.occupation %>
    </p>
  </article>
  <br>
  <button id="moo">Edit your profile</button>
    <div id="edit_form">
      <%= form_for @user do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <br>
        <%= f.label :interests %>
        <%= f.text_field :interests %>
        <br>
        <%= f.label :occupation %>
        <%= f.text_field :occupation %>
        <br>
        <%= f.submit :submit %>
        <br>
      <% end %>
      <br>
      <h4>
        <%= link_to "Delete Account", user_path(@user.id), method: :delete %>
      </h4> 
    </div>
 

</div>

<div class="right">
  <h2>Add a new post:</h2>

  <%= form_for @post do |f| %>
    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </p>
   
    <p>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text %>
    </p>
   
    <p>
      <%= f.submit :publish, class: "button" %>
    </p>
  <% end %>

  <hr>

  <h2>My posts:</h2>
  <br>
  <section class="profile_posts">
    <% @posts.order(id: :desc).each do |p| %>
      <article>
        <h3>
          <%= link_to p.title, post_path(p) %>
        </h3>
        <%= p.text %>
        <p class="date">
          <%= p.created_at.to_s(:long) %>
        </p>
      </article>
    <% end %>
  </section>
</div>