<h1 class="page_headline">Add a New Post</h1>

<div class="main">
  <%= form_for @post, url: posts_path, html: { multipart: true } do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "post_title" %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "new_post" %>
    </p>

    <p>
      <%= f.label :Choose_a_photo %>
      <%= f.file_field :avatar %>
    </p>
   
    <p>
      <%= f.submit :publish, class: "button" %>
    </p>
  <% end %>
</div>