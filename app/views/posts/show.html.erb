<article class="post">
  <h2>
    <%= @post.title %>
  </h2>
  <h5>
    by <%= @user.username %>
  </h5>
  <p>
    <%= @post.text %>
  </p>
  <p class="attribution">
    <%= @post.created_at %>
  </p>
</article>

<%= form_for Comment.new do |f| %>
    <%= f.text_area :body %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit :submit %>
<% end %>

<% @post.comments.each do |comment| %>
  <p class="comment">
    <%= comment.body %>
    <br>
    <span class="comment_attribution"><%= comment.user.username %></span>
  </p>
<% end %>

<%= link_to 'Return to all posts', posts_path %>