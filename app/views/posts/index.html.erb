<h1>Latest Thoughts</h1>

<section>
  <% @posts.each do |post| %>
    <article>
      <h3>
        <%= link_to post.title, post_path(post) %>
      </h3>
      <h5>
        <%= link_to post.user.username, user_path(post.user) %>
      </h5>
      <%= post.text %>
      <p class="date">
        <%= post.created_at %>
      </p>
    </article>
  <% end %>


</section>